{% extends "layout.html.twig" %}

{% block characters %}
    <div class="flex items-center justify-center flex flex-wrap">
        {% for episode in episodes %}
            <a href="#" class="content-center mt-10 ml-11 mr-5 block h-56 w-96 p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
                <h5 class="text-2xl text-center mb-2 font-bold tracking-tight text-gray-900 dark:text-white">{{ episode.season }}</h5>
                <h6 class="font-semibold text-center font-normal text-gray-700 dark:text-gray-400">"{{ episode.name }}"</h6>
                <hr class="h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">
                <p class="text-center font-normal text-gray-700 dark:text-gray-400">Air date:</span> {{ episode.airDate }}</p>
            </a>
        {% endfor %}
    </div>
{% endblock %}