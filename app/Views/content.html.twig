{% extends "layout.html.twig" %}

{% block content %}
    <nav class="bg-white dark:bg-gray-900 fixed w-full z-20 top-0 left-0 border-b border-gray-200 dark:border-gray-600">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-center mx-auto p-4">
            <a href="https://github.com/Trotsijs" class="flex items-right">
                <img src="https://shorturl.at/rtJNP" class="h-20 mr-1" alt="Rick Sanchez">
                <span class="self-center text-5xl font-semibold whitespace-nowrap dark:text-white">RICK AND MORTY</span>
            </a>
        </div>
    </nav>

    <div class="ml-9 mt-32 flex flex-wrap">
        {% for character in characters %}
            <br>
            <a href="#"
               class="mt-10 ml-11 mr-5 shadow-2xl flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
                <img class="mr-5 ml-5 mt-5 mb-5 object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-none"
                     src="{{ character.picture }}" alt="{{ character.name }}">
                <div class="w-80 flex flex-col justify-between leading-normal">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ character.name }}</h5>
                    <ul>
                        {% if character.status == 'Alive' %}
                            <li class="text-lime-500 font-bold py-1">{{ character.status }} <span
                                        class="font-bold py-1 text-gray-400">- {{ character.species }}</span></li>
                        {% elseif character.status == 'Dead' %}
                            <li class="text-red-600 font-bold py-1">{{ character.status }} <span
                                        class="font-bold py-1 text-gray-400">- {{ character.species }}</span></li>
                        {% else %}
                            <li class="text-stone-500 font-bold py-1">{{ character.status|capitalize }} <span
                                        class="font-bold py-1 text-gray-400">- {{ character.species }}</span></li>
                        {% endif %}

                        <li class="mt-3 font-bold text-gray-700 dark:text-gray-400">Origin:</li>
                        <li class="mb-5 font-normal text-gray-700 dark:text-gray-400">{{ character.origin }}</li>
                        <li class="font-bold text-gray-700 dark:text-gray-400">Last known location:</li>
                        <li class="font-normal text-gray-700 dark:text-gray-400">{{ character.lastlocation }}</li>
                    </ul>
                </div>
            </a>
        {% endfor %}
    </div>

{% endblock %}